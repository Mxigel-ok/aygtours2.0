Options +FollowSymLinks -MultiViews
RewriteEngine On
RewriteBase /

# PÃ¡gina por defecto
DirectoryIndex index.html turismo.html

# No reescribir si el archivo o carpeta existe
RewriteCond %{REQUEST_FILENAME} -d [OR]
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Redirigir .html a versiÃ³n sin .html
RewriteCond %{THE_REQUEST} \s/+([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# Permitir acceder a archivos .html sin escribir la extensiÃ³n
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# Redirigir index.html -> /
RewriteCond %{THE_REQUEST} \s/+(index)\.html [NC]
RewriteRule ^ %1 [R=301,L]
RewriteRule ^index$ / [R=301,L]

# ðŸš€ Regla especial para turismo.html
RewriteRule ^turismo/?$ turismo.html [L]
